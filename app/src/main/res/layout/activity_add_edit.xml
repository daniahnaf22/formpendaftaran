<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Pendaftaran"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/text_judul"
            android:inputType="number"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_nama"
            android:layout_below="@id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="19sp"/>


        <EditText
            android:id="@+id/txt_name"
            android:layout_below="@id/txt_id"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/text_nama"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:hint="Input Nama"/>

        <TextView
            android:id="@+id/text_alamat"
            android:layout_below="@id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="19sp"/>


        <EditText
            android:id="@+id/txt_address"
            android:layout_below="@id/txt_name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/text_alamat"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:hint="Input Alamat"/>

        <TextView
            android:id="@+id/text_noHp"
            android:layout_below="@id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.HP :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="19sp"/>


        <EditText
            android:id="@+id/txt_nohp"
            android:layout_below="@id/txt_address"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/text_noHp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:hint="Input No Hp"/>

        <TextView
            android:id="@+id/text_jk"
            android:layout_below="@id/txt_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="19sp"/>


        <EditText
            android:id="@+id/txt_jk"
            android:layout_below="@id/txt_nohp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/text_jk"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:hint="Input Pria or Wanita"/>

        <TextView
            android:id="@+id/text_lokasi"
            android:layout_below="@id/txt_jk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Pendaftaran :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="19sp"/>



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="SUBMIT" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="CANCEL" />
    </LinearLayout>
</LinearLayout>